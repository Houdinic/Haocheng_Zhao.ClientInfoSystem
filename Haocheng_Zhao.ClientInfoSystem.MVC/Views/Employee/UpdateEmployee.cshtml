@model Haocheng_Zhao.ClientInfoSystem.ApplicationCore.Model.EmployeeRequestModel;
<div class="container-fluid">

    <h3> Update Employee </h3>

    <div class="row">

        <div class="col-md-4">
            <form asp-action="UpdateEmployee">

                <div asp-validation-summary="ModelOnly"></div>
                <div class="form-group">
                    <label asp-for="Id">Employee Id</label>
                    <input asp-for="Id" class="form-control" value="@ViewData["id"]">
                    <span asp-validation-for="Id" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Name">Name</label>
                    <input asp-for="Name" class="form-control" value="@ViewData["name"]">
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Designation">Email address</label>
                    <input asp-for="Designation" class="form-control" value="@ViewData["designation"]">
                    <span asp-validation-for="Designation" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-primary">Submit changes</button>
            </form>

        </div>
    </div>

</div>